<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText3"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="-1dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="2dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="160dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_x="166dp"
        android:layout_y="163dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonFunction"
        android:layout_width="270dp"
        android:layout_height="121dp"
        android:layout_x="26dp"
        android:layout_y="276dp"
        android:text="Button" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_x="94dp"
        android:layout_y="439dp"
        android:onClick="exitProgram"
        android:text="Exit" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="431dp"
        android:onClick="resetPosition"
        android:text="reset" />

</AbsoluteLayout>